[color]
    ui = auto
[core]
    shared = true
    autocrlf = false
    editor = /usr/bin/vim
[alias]
    ad = add -p
    co = checkout
    br = branch
    hist = log --oneline --graph --decorate --all -n 20
    histp = log --pretty=format:"%h%x09%an%x09%ad%x09%s" --graph --decorate --all -n 20
    graph = log --graph -10 --branches --remotes --tags  --format=format:'%Cgreen%h %Cresetâ€¢ %<(75,trunc)%s (%cN, %cr) %Cred%d' --date-order
    ci = commit -a -m
    ls = log --graph --date-order --all --color --pretty=format:'%Cblue%h %Cgreen%ci %Cred%cn %Cblue%m %Creset%s %Cred%d'
    tr = log --graph --pretty='format:%C(yellow)%h%Creset %s %Cgreen(%an)%Creset %Cred%d%Creset'
    st = status -sb
    logone = log --oneline --decorate
    po = push origin head
[pager]
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less
[merge]
        tool = p4merge
[mergetool]
        keepBackup = false
[mergetool "p4merge"]
        path = p4merge
        keepTemporaries = false
        trustExitCode = false
[diff]
        compactionHeuristic = true
[filter "lfs"]
	required = true
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
